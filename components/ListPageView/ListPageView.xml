<?xml version="1.0" encoding="UTF-8"?>
<component name="ListPageView" extends="Group"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    <script type="text/brightscript" uri="pkg:/components/ListPageView/ListPageView.brs" />
    <script type="text/brightscript" uri="pkg:/source/Assets.brs" />

    <interface>
        <field id="items" type="array" />
        <field id="selectedAsset" type="assocArray" />
    </interface>

    <children>
        <Rectangle color="#606060" width="1280" height="420" translation="[0, 0]" />
        <LayoutGroup translation="[35, 40]" itemSpacings="[10]">
            <Label id="selectedLabelCategory" font="font:SmallestSystemFont" />
            <Label id="selectedLabel" font="font:SmallBoldSystemFont" />
            <Label id="selectedText" width="600" font="font:SmallestSystemFont" wrap="true" />
        </LayoutGroup>
        <Poster id="assetImage" loadDisplayMode="limitSize" loadWidth="600" loadHeight="290" height="290" translation="[640, 40]" />
        <LayoutGroup translation="[1150, 10]" itemSpacings="[25]" layoutDirection="horiz">
            <Poster uri="pkg:/images/sky-logo-transparent.png" />
        </LayoutGroup>
        <Rectangle color="#000000" width="1280" height="420" translation="[0, 330]" />
        <RowList id="rowList" translation="[30, 300]"/>
    </children>
</component>
